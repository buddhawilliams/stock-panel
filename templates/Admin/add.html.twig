{% extends "base.html.twig" %}


{% block title %}{{ parent() }} &ndash; Adding a share{% endblock %}


{% block body %}
    <div class="container py-3">
        <h1>Adding a share</h1>
        <form class="stock-form panel panel-default" action="{{ path("stock_add") }}" method="POST">
            <div class="panel-body">
                {{ form_widget(form) }}
            </div>
            <div class="panel-footer">
                <button type="submit" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add share
                </button>
            </div>
        </form>
    </div>
{% endblock %}
